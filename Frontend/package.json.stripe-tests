{
  "name": "stripe-integration-tests",
  "version": "1.0.0",
  "description": "Package.json configuration for Stripe integration tests",
  "scripts": {
    "test:stripe": "jest --testPathPattern=PaymentForm.integration.test.tsx --verbose",
    "test:stripe:watch": "jest --testPathPattern=PaymentForm.integration.test.tsx --watch",
    "test:stripe:coverage": "jest --testPathPattern=PaymentForm.integration.test.tsx --coverage",
    "test:all": "jest --verbose",
    "test:integration": "jest --testPathPattern=integration --verbose"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/src/setupTests.ts"],
    "testMatch": [
      "**/__tests__/**/*.(ts|tsx|js)",
      "**/*.(test|spec).(ts|tsx|js)"
    ],
    "moduleNameMapping": {
      "^@/(.*)$": "<rootDir>/src/$1",
      "^@shared/(.*)$": "<rootDir>/src/shared/$1"
    },
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest",
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json"],
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts",
      "!src/main.tsx",
      "!src/vite-env.d.ts"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "testTimeout": 30000
  },
  "devDependencies": {
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.5.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "ts-jest": "^29.1.0",
    "msw": "^0.49.2",
    "@stripe/stripe-js": "^2.1.11",
    "@stripe/react-stripe-js": "^2.1.11"
  }
}
