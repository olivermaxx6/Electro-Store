{
  "name": "electro-ecommerce",
  "private": true,
  "version": "1.0.0",
  "type": "module",
  "description": "Electro E-commerce Platform - Complete storefront and admin panel",
  "scripts": {
    "dev": "vite",
    "dev:storefront": "vite --config vite.storefront.config.js",
    "dev:admin": "vite --config vite.admin.config.js",
    "dev:both": "concurrently \"npm run dev:storefront\" \"npm run dev:admin\"",
    "build": "vite build",
    "build:storefront": "vite build --config vite.storefront.config.js",
    "build:admin": "vite build --config vite.admin.config.js",
    "build:both": "npm run build:storefront && npm run build:admin",
    "lint": "eslint . --ext js,jsx,ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "preview:storefront": "vite preview --config vite.storefront.config.js",
    "preview:admin": "vite preview --config vite.admin.config.js"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-redux": "^9.0.4",
    "react-router-dom": "^6.20.1",
    "recharts": "^3.2.0",
    "redux": "^5.0.1",
    "redux-persist": "^6.0.0",
    "redux-toolkit": "^1.1.2",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/react": "^18.2.37",
    "@types/react-dom": "^18.2.15",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.1.1",
    "autoprefixer": "^10.4.16",
    "concurrently": "^8.2.2",
    "eslint": "^8.53.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "postcss": "^8.4.31",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.0.0",
    "vite": "^4.5.0"
  }
}
